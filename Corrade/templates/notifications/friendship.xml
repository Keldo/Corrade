<?xml version="1.0" encoding="utf-16"?>
<SerializedNotification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Notification>friendship</Notification>
  <NotificationParameters>
    <Item>
      <Key>
        <string>OpenMetaverse.FriendInfoEventArgs</string>
      </Key>
      <Value>
        <ArrayOfParameter>
          <Parameter>
            <Path>Friend.Name</Path>
            <Processing>
              <NameSplit>
                <First>firstname</First>
                <Last>lastname</Last>
              </NameSplit>
            </Processing>
          </Parameter>
          <Parameter>
            <Path>Friend.UUID</Path>
            <Name>agent</Name>
          </Parameter>
          <Parameter>
            <Name>status</Name>
            <Processing>
              <TernarySubstitution>
                <Path>Friend.IsOnline</Path>
                <boolean>true</boolean>
                <Left>online</Left>
                <Right>offline</Right>
                <Type>OpenMetaverse.FriendInfoEventArgs</Type>
              </TernarySubstitution>
            </Processing>
          </Parameter>
          <Parameter>
            <Path>Friend.MyFriendRights</Path>
            <Name>rights</Name>
          </Parameter>
          <Parameter>
            <Path>update</Path>
            <Name>action</Name>
          </Parameter>
        </ArrayOfParameter>
      </Value>
    </Item>
    <Item>
      <Key>
        <string>OpenMetaverse.FriendshipResponseEventArgs</string>
      </Key>
      <Value>
        <ArrayOfParameter>
          <Parameter>
            <Path>AgentName</Path>
            <Processing>
              <NameSplit>
                <First>firstname</First>
                <Last>lastname</Last>
              </NameSplit>
            </Processing>
          </Parameter>
          <Parameter>
            <Path>AgentID</Path>
            <Name>agent</Name>
          </Parameter>
          <Parameter>
            <Path>response</Path>
            <Name>action</Name>
          </Parameter>
        </ArrayOfParameter>
      </Value>
    </Item>
    <Item>
      <Key>
        <string>OpenMetaverse.FriendshipOfferedEventArgs</string>
      </Key>
      <Value>
        <ArrayOfParameter>
          <Parameter>
            <Path>AgentName</Path>
            <Processing>
              <NameSplit>
                <First>firstname</First>
                <Last>lastname</Last>
              </NameSplit>
            </Processing>
          </Parameter>
          <Parameter>
            <Path>AgentID</Path>
            <Name>agent</Name>
          </Parameter>
          <Parameter>
            <Path>request</Path>
            <Name>action</Name>
          </Parameter>
        </ArrayOfParameter>
      </Value>
    </Item>
  </NotificationParameters>
</SerializedNotification>